@model Endava.iAcademy.Web.Models.CoursesViewModel
@{
    ViewData["Title"] = "Home Page";
}

<br />
<h1 style="top: 90px">Courses:</h1>

<div class="form-group float-left">
    <label for="SortBy">Sort by: </label>
    <form id="sortingForm">
        <select class="form-control" type="submit" id="exampleSelect1" name="Filter" onchange="changeSort(this)">
            @foreach (var option in Model.SortAction)
            {
                if (option == Model.SortParam)
                {
                    <option selected="selected">@option</option>
                }
                else
                {
                    <option>@option</option>
                }
            }
        </select>
    </form>
</div>
<div class="form-group float-left">
    <label for="SortBy">Category: </label>
    <form id="categoryForm">
        <select class="form-control" type="submit" id="exampleCategory1" name="Category" onchange="changeCategory(this)">
            @foreach (var option in Model.CategoryAction)
            {
                if (option == Model.Category)
                {
                    <option selected="selected">@option</option>
                }
                else
                {
                    <option>@option</option>
                }
            }
        </select>
    </form>
</div>
<br />
<br />
<br />
<br />

<div class="flex-lg-row" style="max-width: 100%">
    <div style="display: flex; flex-flow: row wrap; justify-content: flex-start">
        @foreach (var course in Model.Courses)
        {

            <a href="@Url.Action("Index", "Course", new { id = course.Id })" style="text-decoration:none;">
                <div class="card text-white bg-info mb-3" style="max-width: 20rem;max-height: 11.5rem; min-height: 11.5rem;overflow: hidden;-ms-flex: auto;box-sizing: border-box;flex-basis: 33.33%;margin: 15px">
                    <div class="card-body">
                        <h4 class="card-title">@course.Title</h4>
                        <p class="card-text flex-fill">@course.Description</p>
                    </div>
                </div>
            </a>

        }
    </div>
</div>
